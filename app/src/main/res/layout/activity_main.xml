            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/vcr_osd_mono"
            android:gravity="left"
            android:text="AUTO"
            android:textColor="#00FF00"
            app:layout_constraintStart_toStartOf="@+id/mjpegview"
            app:layout_constraintTop_toBottomOf="@id/menuButton" />
        <Button android:id="@+id/slamButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SLAM" android:fontFamily="@font/vcr_osd_mono" android:background="@android:color/transparent" app:layout_constraintStart_toStartOf="@+id/mjpegview" app:layout_constraintTop_toBottomOf="@+id/autoButton" android:gravity="left" android:textColor="#00FF00"/>
        <Button android:id="@+id/trtButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TRT" android:fontFamily="@font/vcr_osd_mono" android:background="@android:color/transparent" app:layout_constraintStart_toStartOf="@+id/mjpegview" app:layout_constraintTop_toBottomOf="@+id/slamButton" android:gravity="left" android:textColor="#00FF00"/>
        <Button android:id="@+id/saButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SA" android:fontFamily="@font/vcr_osd_mono" android:background="@android:color/transparent" android:textColor="#00FF00" app:layout_constraintStart_toStartOf="@+id/mjpegview" app:layout_constraintTop_toBottomOf="@+id/trtButton" android:gravity="left"/>
        <Button android:id="@+id/spatialButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@android:color/transparent" android:text="3D" android:fontFamily="@font/vcr_osd_mono" android:gravity="left" app:layout_constraintStart_toStartOf="@+id/mjpegview" app:layout_constraintTop_toBottomOf="@+id/saButton" android:textColor="#00FF00"/>
        <Button android:id="@+id/videoMode" android:layout_marginTop="30dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@android:color/transparent" android:text="Button" app:layout_constraintEnd_toEndOf="@+id/mjpegview" app:layout_constraintTop_toTopOf="parent" android:textColor="#00FF00" android:gravity="right" android:fontFamily="@font/vcr_osd_mono"/>
        <TextView android:id="@+id/textIPView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="76dp" android:layout_marginEnd="84dp" android:background="@android:color/transparent" android:fontFamily="@font/vcr_osd_mono" android:text="TextView" android:textColor="#00FF00" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <TextView android:id="@+id/networkErrorText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="48dp" android:layout_marginEnd="152dp" android:background="@android:color/transparent" android:fontFamily="@font/vcr_osd_mono" android:text="TextView" android:textColor="#00FF00" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textIPView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
