        <Button android:id="@+id/menuButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="MENU" android:background="@android:color/transparent" android:fontFamily="@font/vcr_osd_mono" app:layout_constraintStart_toStartOf="@+id/mjpegview" app:layout_constraintTop_toTopOf="@+id/mjpegview" android:gravity="left" android:textColor="#00FF00"/>

        <Button
