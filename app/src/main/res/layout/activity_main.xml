<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/myConstraintLayout" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/black">
        <com.longdo.mjpegviewer.MjpegView android:id="@+id/mjpegview" android:layout_width="0dp" android:layout_height="0dp" android:layout_marginRight="240dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintDimensionRatio="H,3:4" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"/>
