<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/turretConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TurretActivity">

    <com.longdo.mjpegviewer.MjpegView
        android:id="@+id/mjpegview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.example.ugv2.JoystickView
        android:id="@+id/rightJoyStick"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/laserButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#00000000"
        android:fontFamily="@font/vcr_osd_mono"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="LSR"
        android:textColor="#00ff00"
        app:layout_constraintStart_toStartOf="@+id/mjpegview"
        app:layout_constraintTop_toBottomOf="@+id/lockModeButton"
        app:strokeColor="#00ff00"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/turretActivationButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="492dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/vcr_osd_mono"
        android:textColor="#00ff00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#00ff00"
        android:text="TRT INACTIVE" />

    <Button
        android:id="@+id/cycleLockButton2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="212dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/vcr_osd_mono"
        android:text="CLBR"
        android:textColor="#00ff00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/lockModeButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/vcr_osd_mono"
        android:textColor="#00ff00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#00ff00"
        android:text="LOCK MODE" />

    <TextView
        android:id="@+id/laserStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/vcr_osd_mono"
        android:text="LASER STATE: OFF"
        android:textColor="#00ff00"
        app:layout_constraintStart_toEndOf="@+id/lockModeButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lockModeStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/vcr_osd_mono"
        android:text="TURRET LOCK: NONE"
        android:textColor="#00ff00"
        app:layout_constraintStart_toEndOf="@+id/lockModeButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@+id/turretActivationButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/turret_base" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@mipmap/ic_launcher_foreground" />


</androidx.constraintlayout.widget.ConstraintLayout>